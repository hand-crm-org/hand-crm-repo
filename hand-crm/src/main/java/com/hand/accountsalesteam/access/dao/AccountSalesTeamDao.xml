<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.accountsalesteam.access.dao.AccountSalesTeamDao">
    <select id="queryAccountSalesTeamList" parameterType="com.hand.frame.util.PageQuery" resultType="com.hand.accountsalesteam.access.vo.AccountSalesTeamVO">
        SELECT
        T1.CODE code,
        T1.CREATED created,
        T1.CREATED_BY createdBy,
        T1.UPDATED updated,
        T1.UPDATED_BY updatedBy,
        T1.ACCNT_CODE accntCode,
        T1.EMP_CODE empCode,
        T1.PRI_FLG priFlg,
        T1.DESC `desc`,
        T1.STATUS status,
        T1.TEAM_ROLE teamRoleCode,
        (SELECT VAL FROM HC_LST_OF_VAL WHERE `NAME` = T1.TEAM_ROLE AND TYPE = 'TEAM_ROLE_TYPE' AND ACT_FLG = 'Y' AND LANG_ID = #{entity.langId}) teamRole,
        T2.NAME empName,
        T2.WORK_NUM empPhoneNum,
        (SELECT NAME FROM HC_POSTN WHERE CODE = T2.PRI_POSTN_CODE) empPosition
        FROM
        HC_ACCNT_POSTN T1, HC_EMP T2
        WHERE
        T1.ACCNT_CODE = #{entity.accntCode}
        AND T1.EMP_CODE = T2.CODE
        AND T1.STATUS = 'Active'

        <include refid="queryAllConditionSql"></include>

        limit #{start},#{pageSize}
    </select>
    <select id="queryAccountSalesTeamCount" parameterType="com.hand.frame.util.PageQuery" resultType="int">
        SELECT COUNT(*)
        FROM
        HC_ACCNT_POSTN T1, HC_EMP T2
        WHERE
        T1.ACCNT_CODE = #{entity.accntCode}
        AND T1.EMP_CODE = T2.CODE
        AND T1.STATUS = 'Active'

        <include refid="queryAllConditionSql"></include>

    </select>
    <insert id="insertAccountSalesTeam" parameterType="com.hand.accountsalesteam.access.vo.AccountSalesTeamVO">
        INSERT
        INTO
        HC_ACCNT_POSTN (CODE,CREATED,CREATED_BY,ACCNT_CODE,EMP_CODE,PRI_FLG,STATUS,`DESC`,TEAM_ROLE)
        VALUES (#{code},sysdate(),#{updatedBy},#{accntCode},#{empCode},#{priFlg},#{status},#{desc},#{teamRoleCode})
    </insert>
    <update id="updateAccountSalesTeam" parameterType="com.hand.accountsalesteam.access.vo.AccountSalesTeamVO">
        UPDATE
        HC_ACCNT_POSTN
        SET
        UPDATED=sysdate(),
        <include refid="updateConditionSql"></include>
        WHERE CODE=#{code}
    </update>

    <delete id="deleteAccountSalesTeam" parameterType="String">
        DELETE
        FROM
        HC_ACCNT_POSTN
        WHERE
        CODE = #{code}
    </delete>
    <sql id="queryAllSql">
        SELECT
        CODE as code,
        CREATED as created,
        CREATED_BY as createdBy,
        UPDATED as updated,
        UPDATED_BY as updatedBy,
        ACCNT_CODE as accntCode,
        EMP_CODE as empCode,
        PRI_FLG as priFlg,
        STATUS as status,
        `DESC` as `desc`
        FROM
        HC_ACCNT_POSTN
    </sql>
    <sql id="queryAllConditionSql">
        <if test="entity!=null">
            <if test="entity.code!=null and entity.code!=''"> AND CODE=#{entity.code}</if>
            <if test="entity.created!=null"> AND CREATED LIKE "%"#{entity.created}"%"</if>
            <if test="entity.createdBy!=null and entity.createdBy!=''"> AND CREATED_BY LIKE "%"#{entity.createdBy}"%"</if>
            <if test="entity.updated!=null"> AND UPDATED LIKE "%"#{entity.updated}"%"</if>
            <if test="entity.updatedBy!=null and entity.updatedBy!=''"> AND UPDATED_BY LIKE "%"#{entity.updatedBy}"%"</if>
            <if test="entity.accntCode!=null and entity.accntCode!=''"> AND ACCNT_CODE = #{entity.accntCode}</if>
            <if test="entity.priFlg!=null and entity.priFlg!=''"> AND PRI_FLG = #{entity.priFlg}</if>
            <if test="entity.empCode!=null and entity.empCode!=''"> AND EMP_CODE = #{entity.empCode}</if>
            <if test="entity.status!=null and entity.status!=''"> AND STATUS  LIKE "%"#{entity.status}"%"</if>
            <if test="entity.desc!=null and entity.desc!=''"> AND `DESC` LIKE "%"#{entity.desc}"%"</if>
            <if test="entity.empName!=null and entity.empName!=''"> AND T2.NAME LIKE "%"#{entity.empName}"%"</if>
            <if test="entity.empPhoneNum!=null and entity.empPhoneNum!=''"> AND WORK_NUM LIKE "%"#{entity.empPhoneNum}"%"</if>
            <if test="entity.teamRole!=null and entity.teamRole!=''"> AND (SELECT VAL FROM HC_LST_OF_VAL WHERE `NAME` = T1.TEAM_ROLE AND TYPE = 'TEAM_ROLE_TYPE' AND ACT_FLG = 'Y' AND LANG_ID = #{entity.langId}) LIKE "%"#{entity.teamRole}"%"</if>
        </if>
    </sql>
    <sql id="updateConditionSql">
        <if test="updatedBy!=null and updatedBy!=''">UPDATED_BY=#{updatedBy}</if>
        <if test="accntCode!=null and accntCode!=''">,ACCNT_CODE = #{accntCode}</if>
        <if test="empCode!=null and empCode!=''">,EMP_CODE = #{empCode}</if>
        <if test="status!=null and status!=''">,STATUS = #{status}</if>
        <if test="desc!=null and desc!=''">,`DESC` = #{desc}</if>
        <if test="teamRoleCode!=null and teamRoleCode!=''">,TEAM_ROLE = #{teamRoleCode}</if>
    </sql>
</mapper>